<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="0dp"
    tools:context=".Statistics">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="171dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="172dp"
        android:text="지금까지 달린 거리"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_total"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:background="#F3F0F0"
        android:gravity="center"
        android:text="0.00"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="92dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="92dp"
        android:background="#A6A4A4"
        android:gravity="center"
        android:text="KM"
        android:textColor="#090909"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_total"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="283dp"
        android:layout_height="38dp"
        android:layout_marginTop="96dp"
        android:gravity="center"
        android:text="서울에서 부산까지 달렸습니다!"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.305"
        app:layout_constraintStart_toStartOf="@+id/tv_total"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <androidx.constraintlayout.widget.Group
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/tv_total"
        tools:layout_editor_absoluteY="274dp" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:background="#F00543B3"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="273dp"
        android:layout_height="51dp"
        android:layout_marginStart="69dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="69dp"
        android:gravity="center"
        android:text="통계"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:backgroundTint="#498DF3"
        android:text="주간"
        app:layout_constraintBottom_toBottomOf="@+id/button6"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/button6"
        android:layout_width="94dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#498DF3"
        android:text="월간"
        app:layout_constraintEnd_toStartOf="@+id/button7"
        app:layout_constraintStart_toEndOf="@+id/button5"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/button7"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="34dp"
        android:backgroundTint="#498DF3"
        android:text="연간"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TableLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:background="#F3F0F0"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        app:layout_constraintVertical_bias="0.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:gravity="center"
            android:weightSum="10">

            <TextView
                android:id="@+id/textView34"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginRight="3dp"
                android:layout_weight="6"
                android:background="#F4F1F1"
                android:gravity="center" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginRight="2dp"
                android:layout_weight="2"
                android:background="#F4F1F1"
                android:gravity="center"
                android:text="이번 주" />

            <TextView
                android:id="@+id/textView32"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_weight="2"
                android:background="#F4F1F1"
                android:gravity="center"
                android:text="지난 주" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:gravity="center"
            android:weightSum="10">

            <TextView
                android:id="@+id/textView25"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:layout_weight="6"
                android:background="#F4F1F1"
                android:gravity="center"
                android:text="거리" />

            <TextView
                android:id="@+id/textView26"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="3sp"
                android:layout_marginRight="2dp"
                android:layout_weight="2"
                android:background="#BEBFBF"
                android:gravity="center"
                android:text="15km"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:background="#BEBFBF"
                android:gravity="center"
                android:text="13.5km"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:gravity="center"
            android:weightSum="10">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:layout_weight="6"
                android:background="#F4F1F1"
                android:gravity="center"
                android:text="운동 시간" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="3sp"
                android:layout_marginRight="2dp"
                android:layout_weight="2"
                android:background="#BEBFBF"
                android:gravity="center"
                android:text="1시간 25분"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:background="#BEBFBF"
                android:gravity="center"
                android:text="1시간 19분"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30sp"
            android:gravity="center"
            android:weightSum="10">

            <TextView
                android:id="@+id/textView28"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="3dp"
                android:layout_weight="6"
                android:background="#F4F1F1"
                android:gravity="center"
                android:text="평균 페이스(km/분)" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="3sp"
                android:layout_marginRight="2dp"
                android:layout_weight="2"
                android:background="#BEBFBF"
                android:gravity="center"
                android:text="5.6분"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="2dp"
                android:layout_weight="2"
                android:background="#BEBFBF"
                android:gravity="center"
                android:text="5.8분"
                android:textStyle="bold" />

        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:background="#F00543B3"
        android:gravity="center"
        android:text="통계"
        android:textColor="#F8F8F8"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>